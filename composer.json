{
    "name": "openconext/saml-value-object",
    "description": "Set of value objects for usage with SAML2",
    "license": "Apache-2.0",
    "type": "library",
    "authors": [
        {
            "name": "DRvanR",
            "email": "dvrenterghem@ibuildings.nl"
        }
    ],
    "require": {
        "php": ">=8.2",
        "beberlei/assert": "^3.3.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48.2",
        "liip/rmt": "^1.2",
        "overtrue/phplint": "^9.6.2",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.7",
        "phpstan/phpstan-strict-rules": "^2.0.6",
        "phpunit/phpunit": "^11.5.39",
        "squizlabs/php_codesniffer": "^3.13",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "OpenConext\\Value\\": "src/OpenConext/Value"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenConext\\Value\\": "tests/OpenConext/Value"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "check": [
            "@composer normalize --dry-run",
            "@phplint",
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@test",
            "@composer audit"
        ],
        "phpcbf": "./tools/qa/phpcbf",
        "phpcs": "./tools/qa/phpcs",
        "phplint": "./tools/qa/phplint",
        "phpmd": "./tools/qa/phpmd",
        "phpstan": "./tools/qa/phpstan",
        "test": "./tools/qa/phpunit"
    }
}
